<Page x:Class="WindowsKontrolMerkezi.Pages.PanelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{DynamicResource Surface}">
  <Page.Resources>
    <Style x:Key="RingLabel" TargetType="TextBlock">
      <Setter Property="Foreground" Value="{DynamicResource Text}"/>
      <Setter Property="FontSize" Value="24"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
      <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    <Style x:Key="RingSub" TargetType="TextBlock">
      <Setter Property="Foreground" Value="{DynamicResource TextDim}"/>
      <Setter Property="FontSize" Value="11"/>
      <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
  </Page.Resources>
  <StackPanel>
    <TextBlock Text="Sistem Özeti" Foreground="{DynamicResource Text}" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,16"/>
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <Border Grid.Column="0" Background="{DynamicResource Card}" BorderBrush="{DynamicResource Border}" BorderThickness="1" CornerRadius="12" Padding="24" Margin="0,0,8,0">
        <StackPanel HorizontalAlignment="Center">
          <Grid Width="120" Height="120" Margin="0,0,0,8">
            <Ellipse Stroke="{DynamicResource Border}" StrokeThickness="8"/>
            <Ellipse x:Name="CpuRing" Stroke="#7C3AED" StrokeThickness="8" StrokeDashArray="0 1000" RenderTransformOrigin="0.5,0.5">
              <Ellipse.RenderTransform><RotateTransform Angle="-90"/></Ellipse.RenderTransform>
            </Ellipse>
          </Grid>
          <TextBlock x:Name="TbCpu" Style="{DynamicResource RingLabel}" Text="0%"/>
          <TextBlock Text="CPU" Style="{DynamicResource RingSub}" Margin="0,4,0,0"/>
        </StackPanel>
      </Border>
      <Border Grid.Column="1" Background="{DynamicResource Card}" BorderBrush="{DynamicResource Border}" BorderThickness="1" CornerRadius="12" Padding="24" Margin="4,0">
        <StackPanel HorizontalAlignment="Center">
          <Grid Width="120" Height="120" Margin="0,0,0,8">
            <Ellipse Stroke="{DynamicResource Border}" StrokeThickness="8"/>
            <Ellipse x:Name="MemRing" Stroke="#06B6D4" StrokeThickness="8" StrokeDashArray="0 1000" RenderTransformOrigin="0.5,0.5">
              <Ellipse.RenderTransform><RotateTransform Angle="-90"/></Ellipse.RenderTransform>
            </Ellipse>
          </Grid>
          <TextBlock x:Name="TbMem" Style="{DynamicResource RingLabel}" Text="0%"/>
          <TextBlock Text="RAM" Style="{DynamicResource RingSub}" Margin="0,4,0,0"/>
        </StackPanel>
      </Border>
      <Border Grid.Column="2" Background="{DynamicResource Card}" BorderBrush="{DynamicResource Border}" BorderThickness="1" CornerRadius="12" Padding="24" Margin="8,0,0,0">
        <StackPanel HorizontalAlignment="Center">
          <Grid Width="120" Height="120" Margin="0,0,0,8">
            <Ellipse Stroke="{DynamicResource Border}" StrokeThickness="8"/>
            <Ellipse x:Name="DiskRing" Stroke="#10B981" StrokeThickness="8" StrokeDashArray="0 1000" RenderTransformOrigin="0.5,0.5">
              <Ellipse.RenderTransform><RotateTransform Angle="-90"/></Ellipse.RenderTransform>
            </Ellipse>
          </Grid>
          <TextBlock x:Name="TbDisk" Style="{DynamicResource RingLabel}" Text="0%"/>
          <TextBlock Text="Disk C:" Style="{DynamicResource RingSub}" Margin="0,4,0,0"/>
        </StackPanel>
      </Border>
    </Grid>
    <Border Background="{DynamicResource Card}" BorderBrush="{DynamicResource Border}" BorderThickness="1" CornerRadius="12" Padding="16" Margin="0,24,0,0">
      <StackPanel>
        <TextBlock Text="Canlı kullanım" Foreground="{DynamicResource TextDim}" FontSize="12" Margin="0,0,0,12"/>
        <Grid Height="140">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>
          <StackPanel Grid.Column="0" x:Name="CpuBars"/>
          <StackPanel Grid.Column="1" x:Name="MemBars" Margin="8,0"/>
          <StackPanel Grid.Column="2" x:Name="DiskBars"/>
        </Grid>
        <Grid Margin="0,8,0,0">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
          </Grid.ColumnDefinitions>
          <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Foreground="#7C3AED" Text="● CPU  " FontSize="11"/>
            <TextBlock Foreground="#06B6D4" Text="● RAM  " FontSize="11"/>
            <TextBlock Foreground="#10B981" Text="● Disk" FontSize="11"/>
          </StackPanel>
          <Button Grid.Column="1" x:Name="BtnDetayliInceleme" Content="Detaylı inceleme" Click="BtnDetayliInceleme_OnClick"
                  Background="#7C3AED" Foreground="White" BorderThickness="0" Padding="12,6" Cursor="Hand"/>
        </Grid>
      </StackPanel>
    </Border>
    <Border Background="{DynamicResource Card}" BorderBrush="{DynamicResource Border}" BorderThickness="1" CornerRadius="12" Padding="16" Margin="0,12,0,0">
      <StackPanel>
        <TextBlock Text="Ağ ve sistem" Foreground="{DynamicResource TextDim}" FontSize="12" Margin="0,0,0,8"/>
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>
          <StackPanel Grid.Column="0">
            <TextBlock Text="Ağ hızı (yaklaşık)" Foreground="{DynamicResource TextDim}" FontSize="11"/>
            <TextBlock x:Name="TbNetwork" Foreground="{DynamicResource Text}" FontSize="13" Text="↓ 0 Mbps  ↑ 0 Mbps"/>
          </StackPanel>
          <StackPanel Grid.Column="1">
            <TextBlock Text="Sistem" Foreground="{DynamicResource TextDim}" FontSize="11"/>
            <TextBlock x:Name="TbSystem" Foreground="{DynamicResource Text}" FontSize="11" TextWrapping="Wrap"/>
          </StackPanel>
        </Grid>
      </StackPanel>
    </Border>
    <Border Background="{DynamicResource Card}" BorderBrush="{DynamicResource Border}" BorderThickness="1" CornerRadius="12" Padding="16" Margin="0,12,0,0">
      <StackPanel>
        <TextBlock Text="Hızlı işlemler" Foreground="{DynamicResource TextDim}" FontSize="12" Margin="0,0,0,8"/>
        <StackPanel Orientation="Horizontal">
          <Button Content="Uyku" Click="BtnUyku_OnClick" Margin="0,0,8,0" Padding="12,6" Background="Transparent" Foreground="{DynamicResource Text}" BorderBrush="{DynamicResource Border}" BorderThickness="1" Cursor="Hand"/>
          <Button Content="Yeniden başlat" Click="BtnYenidenBaslat_OnClick" Margin="0,0,8,0" Padding="12,6" Background="Transparent" Foreground="{DynamicResource Text}" BorderBrush="{DynamicResource Border}" BorderThickness="1" Cursor="Hand"/>
        </StackPanel>
      </StackPanel>
    </Border>
  </StackPanel>
</Page>
