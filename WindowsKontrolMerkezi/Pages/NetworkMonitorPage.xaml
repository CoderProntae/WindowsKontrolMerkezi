<Page x:Class="WindowsKontrolMerkezi.Pages.NetworkMonitorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#F5F5F5"
      Title="Ağ Monitörü">
    <Border Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" Text="Ağ Monitörü" FontSize="32" FontWeight="Bold" 
                       Foreground="#1F1F1F" Margin="0,0,0,20"/>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Speed Summary Card -->
                <Border Background="White" CornerRadius="12" Padding="24" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Download Speed -->
                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Text="⬇ İndirme Hızı" FontSize="14" FontWeight="SemiBold" 
                                      Foreground="#1F1F1F" Margin="0,0,0,8"/>
                            <TextBlock x:Name="DownloadSpeedBlock" Text="0 KB/s" FontSize="24" 
                                      FontWeight="Bold" Foreground="#2196F3" Margin="0,0,0,4"/>
                            <TextBlock x:Name="DownloadMbpsBlock" Text="0.00 Mbps" FontSize="12" 
                                      Foreground="#757575"/>
                        </StackPanel>

                        <!-- Upload Speed -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="⬆ Yükleme Hızı" FontSize="14" FontWeight="SemiBold" 
                                      Foreground="#1F1F1F" Margin="0,0,0,8"/>
                            <TextBlock x:Name="UploadSpeedBlock" Text="0 KB/s" FontSize="24" 
                                      FontWeight="Bold" Foreground="#FF9800" Margin="0,0,0,4"/>
                            <TextBlock x:Name="UploadMbpsBlock" Text="0.00 Mbps" FontSize="12" 
                                      Foreground="#757575"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Network Adapters Section -->
                <TextBlock Text="Ağ Adaptörleri" FontSize="16" FontWeight="Bold" 
                          Foreground="#1F1F1F" Margin="0,10,0,10"/>

                <!-- Adapters List -->
                <ItemsControl x:Name="AdaptersItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,12">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                                </Border.Effect>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Icon -->
                                    <Canvas Grid.Row="0" Grid.RowSpan="4" Grid.Column="0" Width="40" Height="40" 
                                           VerticalAlignment="Top" Margin="0,0,12,0">
                                        <Rectangle Canvas.Left="5" Canvas.Top="8" Width="30" Height="24" 
                                                  Fill="None" Stroke="#2196F3" StrokeThickness="2" RadiusX="2"/>
                                        <Rectangle Canvas.Left="5" Canvas.Top="5" Width="10" Height="5" 
                                                  Fill="None" Stroke="#2196F3" StrokeThickness="1.5"/>
                                        <Rectangle Canvas.Left="25" Canvas.Top="5" Width="10" Height="5" 
                                                  Fill="None" Stroke="#2196F3" StrokeThickness="1.5"/>
                                    </Canvas>

                                    <!-- Adapter Name -->
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Name}" 
                                              FontSize="14" FontWeight="SemiBold" Foreground="#1F1F1F"/>

                                    <!-- Status Badge -->
                                    <Border Grid.Row="0" Grid.Column="2" Background="#4CAF50" 
                                           CornerRadius="20" Padding="10,4" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Status}" Foreground="White" 
                                                  FontSize="11" FontWeight="SemiBold"/>
                                    </Border>

                                    <!-- IP Address -->
                                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,8,0,0">
                                        <TextBlock Text="IP Adresi" FontSize="11" Foreground="#9E9E9E" 
                                                  Margin="0,0,0,2"/>
                                        <TextBlock Text="{Binding IpAddress}" 
                                                  FontSize="12" Foreground="#424242" FontFamily="Consolas"/>
                                    </StackPanel>

                                    <!-- Download -->
                                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,8,0,0">
                                        <TextBlock Text="⬇ İndirme" FontSize="11" Foreground="#9E9E9E" 
                                                  Margin="0,0,0,2"/>
                                        <TextBlock Text="{Binding BytesReceivedPerSec, StringFormat={}{0:N0} B/s}" 
                                                  FontSize="12" Foreground="#2196F3" FontWeight="SemiBold"/>
                                    </StackPanel>

                                    <!-- Upload -->
                                    <StackPanel Grid.Row="3" Grid.Column="1" Margin="0,8,0,0">
                                        <TextBlock Text="⬆ Yükleme" FontSize="11" Foreground="#9E9E9E" 
                                                  Margin="0,0,0,2"/>
                                        <TextBlock Text="{Binding BytesSentPerSec, StringFormat={}{0:N0} B/s}" 
                                                  FontSize="12" Foreground="#FF9800" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- No Adapters Message -->
                <TextBlock x:Name="NoAdaptersMessage" Text="Etkin ağ adaptörü bulunamadı" 
                          FontSize="12" Foreground="#9E9E9E" TextAlignment="Center" 
                          Visibility="Collapsed" Margin="0,20,0,0"/>

                <!-- Refresh Info -->
                <TextBlock Text="Veriler her 2 saniyede bir güncelleniyor" 
                          FontSize="11" Foreground="#9E9E9E" TextAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>
        </Grid>
    </Border>
</Page>
