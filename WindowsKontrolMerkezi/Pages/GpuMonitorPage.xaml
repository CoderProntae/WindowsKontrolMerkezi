<Page x:Class="WindowsKontrolMerkezi.Pages.GpuMonitorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#F5F5F5"
      Title="GPU Monitörü">
    <Border Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" Text="GPU Monitörü" FontSize="32" FontWeight="Bold" 
                       Foreground="#1F1F1F" Margin="0,0,0,20"/>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- GPU Info Card -->
                <Border Background="White" CornerRadius="12" Padding="24" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- GPU Icon -->
                        <Canvas Grid.Column="0" Width="60" Height="60" VerticalAlignment="Center" Margin="0,0,20,0">
                            <Rectangle Canvas.Left="5" Canvas.Top="10" Width="50" Height="35" Fill="None" 
                                      Stroke="#4285F4" StrokeThickness="2" RadiusX="3" RadiusY="3"/>
                            <Rectangle Canvas.Left="10" Canvas.Top="5" Width="8" Height="8" Fill="#4285F4" RadiusX="2"/>
                            <Rectangle Canvas.Left="22" Canvas.Top="5" Width="8" Height="8" Fill="#4285F4" RadiusX="2"/>
                            <Rectangle Canvas.Left="34" Canvas.Top="5" Width="8" Height="8" Fill="#4285F4" RadiusX="2"/>
                            <Rectangle Canvas.Left="46" Canvas.Top="5" Width="8" Height="8" Fill="#4285F4" RadiusX="2"/>
                        </Canvas>

                        <!-- GPU Info Text -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="GpuNameBlock" Text="GPU Adı" FontSize="18" FontWeight="SemiBold" 
                                      Foreground="#1F1F1F" Margin="0,0,0,8"/>
                            <TextBlock Text="Gerçek zamanlı izleme yapılıyor..." FontSize="12" 
                                      Foreground="#757575"/>
                        </StackPanel>

                        <!-- Status Badge -->
                        <Border Grid.Column="2" Background="#4CAF50" CornerRadius="20" Padding="12,6" 
                               VerticalAlignment="Center">
                            <TextBlock Text="●" Foreground="White" FontSize="12" Margin="0,0,6,0" 
                                      VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Usage Card -->
                <Border Background="White" CornerRadius="12" Padding="24" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Usage Title -->
                        <TextBlock Grid.Row="0" Text="GPU Kullanım" FontSize="16" FontWeight="SemiBold" 
                                  Foreground="#1F1F1F" Margin="0,0,0,12"/>

                        <!-- Percentage Display -->
                        <Grid Grid.Row="1" Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Progress Bar -->
                            <ProgressBar Grid.Column="0" x:Name="UsageProgressBar" Height="8" 
                                        Background="#E0E0E0" Foreground="#4285F4"
                                        Value="0" Maximum="100" VerticalAlignment="Center"/>

                            <!-- Percentage Text -->
                            <TextBlock Grid.Column="1" x:Name="UsagePercentBlock" Text="0%" 
                                      FontSize="14" FontWeight="Bold" Foreground="#4285F4" 
                                      Margin="12,0,0,0" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Usage Range -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="0%" FontSize="11" Foreground="#9E9E9E"/>
                            <TextBlock Grid.Column="2" Text="100%" FontSize="11" Foreground="#9E9E9E"/>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Temperature Card -->
                <Border Background="White" CornerRadius="12" Padding="24" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Temp Title -->
                        <TextBlock Grid.Row="0" Text="GPU Sıcaklığı" FontSize="16" FontWeight="SemiBold" 
                                  Foreground="#1F1F1F" Margin="0,0,0,12"/>

                        <!-- Temperature Display -->
                        <Grid Grid.Row="1" Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <ProgressBar Grid.Column="0" x:Name="TempProgressBar" Height="8" 
                                        Background="#FFE0B2" Foreground="#FF9800"
                                        Value="0" Maximum="100" VerticalAlignment="Center"/>

                            <TextBlock Grid.Column="1" x:Name="TempBlock" Text="0°C" 
                                      FontSize="14" FontWeight="Bold" Foreground="#FF9800" 
                                      Margin="12,0,0,0" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Temp Status -->
                        <TextBlock Grid.Row="2" x:Name="TempStatusBlock" Text="Normal" 
                                  FontSize="11" Foreground="#9E9E9E"/>
                    </Grid>
                </Border>

                <!-- Status Indicators -->
                <Border Background="White" CornerRadius="12" Padding="24" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Title -->
                        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Sistem Durumu" 
                                  FontSize="16" FontWeight="SemiBold" Foreground="#1F1F1F" Margin="0,0,0,12"/>

                        <!-- Status Items -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="●" FontSize="12" 
                                  Foreground="#4CAF50" Margin="0,0,8,4"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="GPU Sürücüsü Yüklü" 
                                  FontSize="12" Foreground="#424242" Margin="0,0,0,4"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="●" FontSize="12" 
                                  Foreground="#4CAF50" Margin="0,0,8,4"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="GPU Tepki Veriyor" 
                                  FontSize="12" Foreground="#424242" Margin="0,0,0,4"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="●" FontSize="12" 
                                  Foreground="#4CAF50" Margin="0,0,8,0"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="Sıcaklık Normal" 
                                  FontSize="12" Foreground="#424242"/>
                    </Grid>
                </Border>

                <!-- Refresh Info -->
                <TextBlock Text="Veriler her 2 saniyede bir güncelleniyor" 
                          FontSize="11" Foreground="#9E9E9E" TextAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>
        </Grid>
    </Border>
</Page>
