<Window x:Class="WindowsKontrolMerkezi.NotificationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bildirim Merkezi" Height="600" Width="800"
        Background="{DynamicResource Surface}" WindowStartupLocation="CenterOwner" ShowInTaskbar="False">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Bildirim Merkezi" Foreground="{DynamicResource Text}" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="TÃ¼m uygulama bildirimleri ve sistem uyarÄ±larÄ±" Foreground="{DynamicResource TextDim}" FontSize="14" Margin="0,4,0,0"/>
        </StackPanel>

        <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0">
            <TabItem Header="Aktif Bildirimler" Foreground="{DynamicResource Text}">
                <DataGrid x:Name="DgNotifications" Background="Transparent" BorderBrush="{DynamicResource Border}" 
                          AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" RowBackground="{DynamicResource Card}" 
                          Foreground="{DynamicResource Text}" BorderThickness="1" GridLinesVisibility="None" Padding="8">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="{DynamicResource CardAlt}"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextDim}"/>
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource Border}"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Tarih/Saat" Binding="{Binding Timestamp, StringFormat='dd.MM.yyyy HH:mm'}" Width="150"/>
                        <DataGridTextColumn Header="Kaynak" Binding="{Binding SourceApp}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="{DynamicResource Accent}"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="BaÅŸlÄ±k" Binding="{Binding Title}" Width="200"/>
                        <DataGridTextColumn Header="Mesaj" Binding="{Binding Message}" Width="*"/>
                        <DataGridTemplateColumn Header="Ä°ÅŸlem" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Git" Click="BtnGo_OnClick" Visibility="{Binding ActionUrl, Converter={StaticResource NullToVisibilityConverter}}"
                                            Background="Transparent" Foreground="{DynamicResource Accent}" BorderThickness="0" Cursor="Hand" FontWeight="Bold"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            
            <TabItem x:Name="TabHistory" Header="ðŸ“œ GeÃ§miÅŸ" Foreground="{DynamicResource Text}">
                <DataGrid x:Name="DgHistory" Background="Transparent" BorderBrush="{DynamicResource Border}" 
                          AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" RowBackground="{DynamicResource CardAlt}" 
                          Foreground="{DynamicResource TextDim}" BorderThickness="1" GridLinesVisibility="None" Padding="8">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="{DynamicResource Card}"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextDim}"/>
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource Border}"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Silinme Tarihi" Binding="{Binding Timestamp, StringFormat='dd.MM.yyyy HH:mm'}" Width="150"/>
                        <DataGridTextColumn Header="Kaynak" Binding="{Binding SourceApp}" Width="120"/>
                        <DataGridTextColumn Header="BaÅŸlÄ±k" Binding="{Binding Title}" Width="200"/>
                        <DataGridTextColumn Header="Mesaj" Binding="{Binding Message}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,24,0,0">
            <Button Content="TÃ¼mÃ¼nÃ¼ Temizle" Click="BtnClear_OnClick" Padding="16,8" Margin="0,0,12,0" 
                    Background="Transparent" Foreground="{DynamicResource TextDim}" BorderBrush="{DynamicResource Border}" BorderThickness="1"/>
            <Button Content="Kapat" Click="BtnClose_OnClick" Padding="24,8" Background="{DynamicResource Accent}" Foreground="White" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
